@model Bram___grocery_store.Models.Product

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row">
        <div class="col-sm">
        </div>
        <div class="col-sm bg-light" style="opacity:0.85; font-weight:bold; margin:10px;">
            <h3 style="text-align:center;;">הוסף מוצר חדש</h3>

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label style="direction: rtl; float:right;" asp-for="Name" class="control-label">שם</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" ></span>
                </div>
                <div class="form-group">
                    <label style="direction: rtl; float:right;" asp-for="Price" class="control-label ">מחיר</label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" ></span>
                </div>
                <div class="form-group">
                    <label style="direction: rtl;float:right;" asp-for="PhotoUrl" class="control-label ">נתיב של התמונה</label>
                    <input asp-for="PhotoUrl" class="form-control" />
                    <span asp-validation-for="PhotoUrl" ></span>
                </div>
                <div style ="margin-top:10%; margin-bottom:10%;" class="form-group">
                    <input  type="submit" value="שמור" class="btn btn-success btn-block" />
                </div>
            </form>
            <form asp-action="Index" class="mb-3">
                <input type="submit" value="חזרה לחנות" class="btn btn-success btn-block" />
            </form>

        </div>
        <div class="col-sm">
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

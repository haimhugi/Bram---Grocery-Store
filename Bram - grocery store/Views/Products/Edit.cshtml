@model Bram___grocery_store.Models.Product

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="row">
        <div class="col-sm">
        </div>
        <div class="col-sm " style="opacity:0.85; font-weight:bold; margin:10px;">
            <h3 style="text-align:center; margin-bottom:4vh;margin-top:4vh;">ערוך מוצר</h3>

            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly"></div>
                <input type="hidden" asp-for="Id" />
                <div style=" margin-bottom: 2vh;" class="form-group">
                    <label asp-for="Name" class="control-label" style="float:right">שם</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name"></span>
                </div>
                <div  style=" margin-bottom: 2vh;" class="form-group">
                    <label asp-for="Price" class="control-label" style="float:right">מחיר</label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price"></span>
                </div>
                <div style=" margin-bottom: 4vh;" class="form-group">
                    <label asp-for="PhotoUrl" class="control-label" style="float:right">נתיב התמונה</label>
                    <input asp-for="PhotoUrl" class="form-control" />
                    <span asp-validation-for="PhotoUrl"></span>
                </div>
                <div  style=" margin-bottom: 2vh;"class="form-group">
                    <input type="submit" value="שמור" class="btn btn-primary" />
                </div>
            </form>
            <div>
                <a asp-action="Index">חזרה למוצרים</a>
            </div>
        </div>
        <div class="col-sm">
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

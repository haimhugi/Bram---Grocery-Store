@model Bram___grocery_store.Models.User

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <div class="row">
        <div class="col-sm">
        </div>
        <div class="col-sm bg-light" style="opacity:0.85; text-align:right; margin:10px; direction:rtl">
            <h3 style="text-align:center;">Are you sure you want to delete?</h3>
            <hr />
            <p><strong>עיר:  </strong>@Model.FirstName</p>
            <p><strong>רחוב:  </strong>@Model.LastName</p>
            <p><strong>שם:  </strong>@Model.UserName</p>
            <p><strong>סיסמה:  </strong>@Model.Password</p>
            <p><strong>אימייל:  </strong>@Model.Email</p>

            <br />

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger btn-block" />
            </form>
            <br />
            <form asp-action="Index">
                <input type="submit" value="Back to user management" class="btn btn-success btn-block" />
            </form>
        </div>
        <div class="col-sm">
        </div>
    </div>
</div>

@model Bram___grocery_store.Models.User

@{
    ViewData["Title"] = "Create";
}


@*
    asp-controller ~ לאיזה קונטרולר ללכת כמישהו ישלח את הטופס
    asp-action ~ בתוך הקונטרולר לתוך איזה actionללכת
    asp-validation-for ~ ולידאציה
    asp-validation-summary ~ ולידאציה
    asp-for ~ מקשר למשתנה
*@

<div class="container">
    <div class="row align-items-start">
        <div class="col">
        </div>
        <div class="col">
        </div>
        <div class="col">
            <h1 style="direction: rtl;  margin-bottom: 20%;  margin-top: 10%;">החשבון שלי:</h1>
        </div>
    </div>
    <div class="row align-items-center">
        <div class="col">

        </div>
        <div class="col">

        </div>
        <div class="col">
            <h3 style="direction: rtl; margin-bottom: 20%;">התחבר</h3>
        </div>
    </div>


    <form asp-controller="Users" asp-action="Login">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group row align-items-end" style="margin-bottom: 2%;">
            <label asp-for="UserName" style="font-size: x-large;" class="control-label RTL right">שם משתמש</label>
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName"></span>
        </div>
        <div class="form-group row align-items-end" style="margin-bottom: 2%;">
            <label asp-for="Password"   style="font-size: x-large;" class="control-label RTL right" >סיסמה</label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password"></span>
        </div>

        <div class="form-group">
            <input style="background-color: rgb(16, 124, 28) !important;  float: right; width: 100%" type="submit" value="Login" class="btn btn-success" />
        </div>
    </form>
    @if (ViewData["Error"] != null)
    {
        <br />
        <div style="color:red; text-align:center" class="RTL ">@ViewData["Error"]</div>
        <br />
    }

    <div class="col-sm">
    </div>
</div>

<br />
<br />
<br />
<br />
<br />
<br />
<br />
<br />

<form asp-controller="Users" asp-action="Create" class="mb-3">
    <input style="background-color: rgb(16, 124, 28) !important; ; float: right; width: 100%" type="submit" value="Register" class="btn btn-success" />
</form>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

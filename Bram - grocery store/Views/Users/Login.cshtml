@model Bram___grocery_store.Models.User

@{
    ViewData["Title"] = "Create";
}


@*
    asp-controller ~ לאיזה קונטרולר ללכת כמישהו ישלח את הטופס
    asp-action ~ בתוך הקונטרולר לתוך איזה actionללכת
    asp-validation-for ~ ולידאציה
    asp-validation-summary ~ ולידאציה
    asp-for ~ מקשר למשתנה
*@

<div style="width:50%" class="container">
    <br />
    <br />

    <div class="row align-items-center">
        <h3 style="direction: rtl; margin-bottom: 20%;text-align: center">להתחלת הקניה התחברו לאתר</h3>
    </div>

    <form asp-controller="Users" asp-action="Login">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group row align-items-end" style="margin-bottom: 2%;">
            <label asp-for="UserName" style="font-size: x-large;" class="control-label RTL right">שם משתמש</label>
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName"></span>
        </div>
        <div class="form-group row align-items-end" style="margin-bottom: 2%;">
            <label asp-for="Password" style="font-size: x-large;" class="control-label RTL right">סיסמה</label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password"></span>
        </div>

        <div class="form-group">
            <input style="background-color: rgb(16, 124, 28) !important;  float: right; width: 100%" type="submit" value="התחבר" class="btn btn-success" />
        </div>
        @if (ViewData["Error"] != null)
        {
            <br />
            <div style="color:red; text-align:center" class="RTL ">@ViewData["Error"]</div>
            <br />
        }
        else
        {
            <br />
            <br />
            <br />
        }
    </form>
    <form asp-controller="Users" asp-action="Create" class="mb-3" style="margin-top: 5%">
        <input style="background-color: rgb(16, 124, 28) !important; width: 100%" type="submit" value="רישום ללקוח חדש" class="btn btn-success" />
    </form>

    <div class="col-sm">
    </div>

    <br />
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
